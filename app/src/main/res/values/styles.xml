<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Small" parent="Theme.AppCompat.Light">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Large" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ModoClaro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_yellow</item>
        <item name="colorSecondaryVariant">@color/orange_yellow_dark</item>
        <item name="colorOnSecondary">@color/charcoal_black</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/fuente</item>
    </style>

    <style name="ModoOscuro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/navy_blue_dark</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_yellow_dark</item>
        <item name="colorSecondaryVariant">@color/orange_yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/fuente</item>
        <item name="android:statusBarColor" >@color/navy_blue_dark</item>
    </style>

</resources>